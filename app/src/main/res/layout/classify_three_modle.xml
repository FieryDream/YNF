<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:paddingTop="15dp"
              android:text="按肤质"
              android:textSize="20sp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:paddingTop="15dp"
              android:text="适合自己的才是最好"
              android:textColor="@color/loginNightMode"
              android:textSize="10dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingBottom="30dp"
                  android:paddingTop="15dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_1"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_hydrating"/>
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_2"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_soothing"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_4"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_control_oil"/>
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_5"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_whitening"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_6"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_control_oil"/>
            <ImageView android:layout_width="0dp"
                       android:id="@+id/classify_three_7"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@mipmap/classify_whitening"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>