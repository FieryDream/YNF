<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--图片布局-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="6dp"
                  android:paddingBottom="10dp"
                  android:paddingTop="6dp">
        <ImageView
            android:id="@+id/classify_one_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/classify_facial_mask"/>
        　　
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <ImageView
                    android:id="@+id/classify_one_fushui"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/classify_emollient_water"/>
                <ImageView
                    android:id="@+id/classify_one_furu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/classify_body_lotion"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageView
                    android:id="@+id/classify_one_mianru"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/classify_facial_cleanser"/>
                <ImageView
                    android:id="@+id/classify_one_qita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/classify_other"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/classify_one_shihui"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/classify_kit"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>