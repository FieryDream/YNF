<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6">
        <!--大图-->
        <ImageView
            android:id="@+id/zhuti_recycler_bigImage"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="match_parent"/>
        <!--小图-->
        <ImageView
            android:id="@+id/zhuti_recycler_simImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/zhuti_recycler_efficacy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="10sp"
        android:text="dadad"
         />

    <TextView
        android:id="@+id/zhuti_recycler_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:textSize="10sp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zhuti_recycler_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/zhuti_recycler_market_price"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="gdsg"/>
    </LinearLayout>



</LinearLayout>
