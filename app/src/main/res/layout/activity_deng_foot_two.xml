<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/wo_two_invite_confirm"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/user_login_bg_select"
                  android:orientation="horizontal"
                  android:padding="10dp">
        <!--订单图片-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_invite_gift_icon"/>
        <!--订单名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="邀请有礼"/>

        <View android:layout_width="0dp"
              android:layout_height="1dp"
              android:layout_weight="1"/>
        <!--展示箭头-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/wo_two_face_confirm"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/user_login_bg_select"
                  android:orientation="horizontal"
                  android:padding="10dp">
        <!--订单图片-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_face_test_icon"/>
        <!--订单名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="刷脸测尺寸"/>

        <View android:layout_width="0dp"
              android:layout_height="1dp"
              android:layout_weight="1"/>
        <!--展示箭头-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/order_confirm_next_icon"/>
    </LinearLayout>

</LinearLayout>